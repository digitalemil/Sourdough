<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %><%= appregion %>
  </title>
  <link rel='stylesheet' href='../stylesheets/style.css' />
</head>

<body style="color:<%= color %>; background-color: <%= backgroundcolor %>;" onkeypress="handle(event)">
  <script>
    function signingWithKey() {
      var xhttp = new XMLHttpRequest();
      xhttp.open("POST", "/signinwithkey", true);
      xhttp.setRequestHeader('x-api-key', '<%= code %>');
      xhttp.setRequestHeader('Content-type', 'application/text');
      xhttp.onreadystatechange = function () {
        document.location.href = "/app/home"
      };
      xhttp.send(document.getElementById("user").value+"/"+document.getElementById("key").value);
    }

    function handle(e){
        if(e.keyCode === 13){
            e.preventDefault(); // Ensure it is only this code that runs
            signingWithKey();
        }
    }
  </script>

<div id="content"
    style="color:<%= color %>; border:1px solid black; width: 80%; height: 72%; text-align: center; position: absolute; top: 10%; left: 10%; background-color: <%= backgroundcolor %>;">
    <img style="clear:right" width="128px" src="<%= logo %>"></img>

    <p></p>

    <a href="/app/lesfleurs" style="color:<%= color %>;text-align:center"></a>
    
    <h2 style="text-align:center">
      <%= welcome %>
    </h2>
  <table style="width: 80%; text-align: center;;">
<tr style="text-align: center;">
  <td style='font-family: "Italiana", regular; font-size: 24px; text-align: right;' width="10%" >User:</td><td><input autofocus focus style="color:<%= color %>;background-color: <%= backgroundcolor %>; text-align: center; width: 100%;"
    id="user" name="user" value=''></input></td>
</tr>
<tr>
  <td style='font-family: "Italiana", regular; font-size: 24px;  text-align: right' width="10%">  Password:</td><td><input style="color:<%= color %>;background-color: <%= backgroundcolor %>; text-align: center; width: 100%;"
    type="password" id="key" name="key" value=''></input></td>
</tr>
  </table>    
  </br>
    <p></p>
    <a style="color:<%= color %>;" onclick="signingWithKey()">
      <h2 style="color:<%= color %>; text-align:center">Sign In</h2>
    </a>

      <p>
 
  </div>
</body>

</html>